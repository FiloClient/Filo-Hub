-- Roblox Aimbot Script with Mobile-Compatible GUI, Draggable Bar, Remove Cheat Button, and Color Cycling

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "AimbotGUI"
gui.IgnoreGuiInset = true
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame to contain GUI elements
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 200, 0, 140)
frame.Position = UDim2.new(0.5, -100, 0.5, -70)
frame.BackgroundTransparency = 1
frame.Parent = gui

-- Function to cycle through colors of the rainbow
local function rainbowColor(t)
    local frequency = 0.3
    local r = math.sin(frequency * t + 0) * 127 + 128
    local g = math.sin(frequency * t + 2) * 127 + 128
    local b = math.sin(frequency * t + 4) * 127 + 128
    return Color3.fromRGB(r, g, b)
end

-- Function to update GUI color continuously
local function updateColor()
    local startTime = tick()
    while true do
        local elapsedTime = tick() - startTime
        frame.BackgroundColor3 = rainbowColor(elapsedTime)
        wait(0.1)  -- Adjust the interval to control the speed of color cycling
    end
end

-- Start color cycling
coroutine.wrap(updateColor)()

-- Draggable Bar
local dragBar = Instance.new("TextButton")
dragBar.Size = UDim2.new(1, 0, 0, 20)
dragBar.Position = UDim2.new(0, 0, 0, 0)
dragBar.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
dragBar.BorderSizePixel = 0
dragBar.Font = Enum.Font.SourceSans
dragBar.TextColor3 = Color3.fromRGB(255, 255, 255)
dragBar.TextSize = 14
dragBar.Text = "Drag here to move"
dragBar.Parent = frame

-- Function to make the frame draggable (same as before)

