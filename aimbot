-- Roblox Aimbot and Triggerbot Script with Mobile-Compatible GUI, Draggable Bar, Remove Cheat Button

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "AimbotGUI"
gui.IgnoreGuiInset = true
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame to contain GUI elements
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 200, 0, 180)
frame.Position = UDim2.new(0.5, -100, 0.5, -90)
frame.BackgroundTransparency = 1
frame.Parent = gui

-- Draggable Bar
local dragBar = Instance.new("TextButton")
dragBar.Size = UDim2.new(1, 0, 0, 20)
dragBar.Position = UDim2.new(0, 0, 0, 0)
dragBar.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
dragBar.BorderSizePixel = 0
dragBar.Font = Enum.Font.SourceSans
dragBar.TextColor3 = Color3.fromRGB(255, 255, 255)
dragBar.TextSize = 14
dragBar.Text = "Drag here to move"
dragBar.Parent = frame

-- Function to make the frame draggable
local dragging
local dragInput
local dragStart
local startPos

dragBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

dragBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragging and input == dragInput then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Toggle button for aimbot
local aimbotEnabled = false
local aimbotButton = Instance.new("TextButton")
aimbotButton.Text = "Aimbot: OFF"
aimbotButton.Size = UDim2.new(0.45, 0, 0.25, 0)
aimbotButton.Position = UDim2.new(0.025, 0, 0.3, 0)
aimbotButton.AnchorPoint = Vector2.new(0, 0.5)
aimbotButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
aimbotButton.BorderSizePixel = 0
aimbotButton.Font = Enum.Font.SourceSans
aimbotButton.TextColor3 = Color3.fromRGB(255, 255, 255)
aimbotButton.TextSize = 14
aimbotButton.Parent = frame

-- Function to toggle aimbot
local function toggleAimbot()
    aimbotEnabled = not aimbotEnabled
    aimbotButton.Text = aimbotEnabled and "Aimbot: ON" or "Aimbot: OFF"
end

aimbotButton.MouseButton1Click:Connect(toggleAimbot)

-- Toggle button for triggerbot
local triggerbotEnabled = false
local triggerbotButton = Instance.new("TextButton")
triggerbotButton.Text = "Triggerbot: OFF"
triggerbotButton.Size = UDim2.new(0.45, 0, 0.25, 0)
triggerbotButton.Position = UDim2.new(0.525, 0, 0.3, 0)
triggerbotButton.AnchorPoint = Vector2.new(0, 0.5)
triggerbotButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
triggerbotButton.BorderSizePixel = 0
triggerbotButton.Font = Enum.Font.SourceSans
triggerbotButton.TextColor3 = Color3.fromRGB(255, 255, 255)
triggerbotButton.TextSize = 14
triggerbotButton.Parent = frame

-- Function to toggle triggerbot
local function toggleTriggerbot()
    triggerbotEnabled = not triggerbotEnabled
    triggerbotButton.Text = triggerbotEnabled and "Triggerbot: ON" or "Triggerbot: OFF"
end

triggerbotButton.MouseButton1Click:Connect(toggleTriggerbot)

-- Remove Cheat Button
local removeButton = Instance.new("TextButton")
removeButton.Text = "Remove Cheat"
removeButton.Size = UDim2.new(0.4, 0, 0.25, 0)
removeButton.Position = UDim2.new(0.3, 0, 0.6, 0)
removeButton.AnchorPoint = Vector2.new(0.5, 0)
removeButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
removeButton.BorderSizePixel = 0
removeButton.Font = Enum.Font.SourceSans
removeButton.TextColor3 = Color3.fromRGB(255
