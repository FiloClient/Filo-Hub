-- Roblox Aimbot Script with Mobile-Compatible GUI, Draggable Bar, Remove Cheat Button, and Basic Aimbot

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "AimbotGUI"
gui.IgnoreGuiInset = true
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame to contain GUI elements
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 200, 0, 140)
frame.Position = UDim2.new(0.5, -100, 0.5, -70)
frame.BackgroundTransparency = 1
frame.Parent = gui

-- Draggable Bar
local dragBar = Instance.new("TextButton")
dragBar.Size = UDim2.new(1, 0, 0, 20)
dragBar.Position = UDim2.new(0, 0, 0, 0)
dragBar.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
dragBar.BorderSizePixel = 0
dragBar.Font = Enum.Font.SourceSans
dragBar.TextColor3 = Color3.fromRGB(255, 255, 255)
dragBar.TextSize = 14
dragBar.Text = "Drag here to move"
dragBar.Parent = frame

-- Function to make the frame draggable
local dragging
local dragInput
local dragStart
local startPos

dragBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

dragBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragging and input == dragInput then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Toggle button for aimbot
local toggleButton = Instance.new("TextButton")
toggleButton.Text = "Aimbot: OFF"
toggleButton.Size = UDim2.new(0.3, 0, 0.3, 0)
toggleButton.Position = UDim2.new(0.05, 0, 0.35, 0)
toggleButton.AnchorPoint = Vector2.new(0, 0.5)
toggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
toggleButton.BorderSizePixel = 0
toggleButton.Font = Enum.Font.SourceSans
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.TextSize = 18
toggleButton.Parent = frame

-- Function to toggle aimbot
local aimbotEnabled = false
local function toggleAimbot()
    aimbotEnabled = not aimbotEnabled
    toggleButton.Text = aimbotEnabled and "Aimbot: ON" or "Aimbot: OFF"
end

toggleButton.MouseButton1Click:Connect(toggleAimbot)

-- Remove Cheat Button
local removeButton = Instance.new("TextButton")
removeButton.Text = "Remove Cheat"
removeButton.Size = UDim2.new(0.3, 0, 0.3, 0)
removeButton.Position = UDim2.new(0.35, 0, 0.35, 0)
removeButton.AnchorPoint = Vector2.new(0, 0.5)
removeButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
removeButton.BorderSizePixel = 0
removeButton.Font = Enum.Font.SourceSans
removeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
removeButton.TextSize = 18
removeButton.Parent = frame

-- Function to remove cheat and close GUI
local function removeCheat()
    -- Remove cheat logic (replace with your own logic)
    print("Cheat removed")
    gui:Destroy()
end

removeButton.MouseButton1Click:Connect(removeCheat)

-- Basic Aimbot Logic
game:GetService("RunService").RenderStepped:Connect(function()
    if aimbotEnabled then
        local closestDistance = math.huge
        local closestPlayer = nil
        local playerPosition = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart").Position

        if playerPosition then
            for _, player in ipairs(game.Players:GetPlayers()) do
                if player ~= game.Players.LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    local targetPosition = player.Character.HumanoidRootPart.Position
                    local distance = (targetPosition - playerPosition).magnitude
                    if distance < closestDistance then
                        closestDistance = distance
                        closestPlayer = player
                    end
                end
            end

            if closestPlayer then
                local targetPosition = closestPlayer.Character.HumanoidRootPart.Position
                game:GetService("Workspace").CurrentCamera.CFrame = CFrame.new(game:GetService("Workspace").CurrentCamera.CFrame.Position, targetPosition)
            end
        end
    end
end)
